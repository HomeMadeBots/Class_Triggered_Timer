@startuml

!includeurl https://gist.githubusercontent.com/Arnaud-Bonneuil/c317a7a30bed7d64e2b5b1f558ac00cf/raw/sober.puml

!pragma teoz true

participant "Timer_User" as User
participant ":Class_Triggered_Timer" as Class_Triggered_Timer
participant OS

note over Class_Triggered_Timer : Recurrence_Millisecond = 10

{tick_1} OS -> Class_Triggered_Timer : Tick


User -> Class_Triggered_Timer : Start(40)
|||
{tick_2} OS -> Class_Triggered_Timer : Tick

{tick_1} <-> {tick_2} : 10ms

User -> Class_Triggered_Timer : Is_Active
activate Class_Triggered_Timer
return true
OS -> Class_Triggered_Timer : Tick

User -> Class_Triggered_Timer : Get_Remaining_Time
activate Class_Triggered_Timer
return 20


OS -> Class_Triggered_Timer : Tick
|||
|||
OS -> Class_Triggered_Timer : Tick
activate Class_Triggered_Timer
Class_Triggered_Timer -> User : Time_Is_Up
deactivate Class_Triggered_Timer
|||
OS -> Class_Triggered_Timer : Tick

User -> Class_Triggered_Timer : Is_Active
activate Class_Triggered_Timer
return false

OS -> Class_Triggered_Timer : Tick

User -> Class_Triggered_Timer : Get_Remaining_Time
activate Class_Triggered_Timer
return 0

@enduml